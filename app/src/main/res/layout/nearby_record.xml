<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/interact_top_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp5">

    <ImageView
        android:id="@+id/record_icon"
        style="@style/interact_icon_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/record_icon"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/record_head_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/record_nickname"
                style="@style/interact_name_style"
                android:text="this is name" />


        </LinearLayout>


        <TextView
            android:id="@+id/record_content"
            style="@style/interact_content_style"
            android:textSize="@dimen/sp16"
             />


        <com.blue.rchina.views.NoScrollGridView
            android:id="@+id/record_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp40"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/record_date"
            style="@style/interact_day_style"
            android:text="this is date" />

        <TextView
            android:id="@+id/record_delete"
            style="@style/interact_day_style"
            android:paddingLeft="@dimen/dp5"
            android:text="删除"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


</RelativeLayout>

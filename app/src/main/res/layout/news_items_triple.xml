<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp5"
    android:layout_marginBottom="1dp">

    <TextView
        style="@style/news_title_style"
        android:id="@+id/news_triple_title"
        android:padding="@dimen/dp5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp5">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/dp0.5"
            android:id="@+id/news_triple_icon1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/dp0.5"
            android:id="@+id/news_triple_icon2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/dp0.5"
            android:id="@+id/news_triple_icon3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp5"
        android:layout_gravity="right">

        <TextView
            android:layout_weight="1"
            android:gravity="right"
            style="@style/news_small_text"
            android:text="新龙岩"
            android:id="@+id/news_single_from"/>
        <TextView
            style="@style/news_small_text"
            android:layout_marginLeft="@dimen/dp10"
            android:text="0 浏览"
            android:id="@+id/news_single_comment"
            />
        <TextView
            style="@style/news_small_text"
            android:layout_marginLeft="@dimen/dp10"
            android:id="@+id/news_single_time"
            android:text="刚刚"/>



        <TextView
            style="@style/small_text"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/news_selected_color"
            android:id="@+id/news_single_kind"
            android:text="置顶"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp10">


    <TextView
        style="@style/mall_text"
        android:id="@+id/mall_text"
        android:text="不过如果直接写这个代码的话，若本机未安装qq应用，程序会直接go die，所以要加以判断："
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp5"
        android:textColor="@color/price_red"
        android:textSize="@dimen/sp15"
        android:id="@+id/mall_price"
        android:layout_below="@+id/mall_text"
        android:text="￥ 400"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mall_text"
        android:paddingTop="@dimen/dp5"
        android:id="@+id/mall_freight"
        android:textSize="@dimen/sp14"
        android:layout_toRightOf="@+id/mall_price"
        android:text="(免运费)"/>
</RelativeLayout>
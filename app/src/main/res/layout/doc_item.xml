<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/circle_white_dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:id="@+id/media_bg"
        android:src="@drawable/doc"/>

    <TextView
        style="@style/news_title_style"
        android:id="@+id/media_title"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@+id/media_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/media_bg"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/price_red"
        android:text="文档价格:20"
        android:textSize="12sp"
        android:textStyle="bold"
        android:id="@+id/price"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/media_des"
        app:layout_constraintLeft_toRightOf="@+id/media_bg"/>
    <TextView
        style="@style/about_text_style"
        android:layout_width="0dp"
        android:id="@+id/media_des"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/media_bg"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>